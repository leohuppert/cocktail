{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des recettes</h1>

    <div class="row">

        {% for recipe in recipes %}
            <div class="col-lg-4">
                <a href="{{ path('recipe_show', { 'id': recipe.id }) }}">{{ recipe.name }}</a>
            </div>
        {% endfor %}

    </div>

{% endblock %}
